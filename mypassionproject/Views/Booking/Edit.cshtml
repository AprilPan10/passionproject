@model mypassionproject.Models.ViewModels.UpdateBooking

@{
    ViewBag.Title = "View";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Booking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.booking.BookingID, new { Name = "BookingID" })

        <div class="form-group">
            @Html.LabelFor(model => model.booking.BookingPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.booking.BookingPrice, new { htmlAttributes = new { @class = "form-control", Name = "BookingPrice" } })
                @Html.ValidationMessageFor(model => model.booking.BookingPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.booking.BookingDes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.booking.BookingDes, new { htmlAttributes = new { @class = "form-control", Name = "BookingDes" } })
                @Html.ValidationMessageFor(model => model.booking.BookingDes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.booking.BookingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.booking.BookingDate, new { htmlAttributes = new { @class = "form-control", Name = "BookingDate" } })
                @Html.ValidationMessageFor(model => model.booking.BookingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.booking.ClientID, "ClientID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="ClientID">
                    @foreach (var client in Model.allclients)
                    {
                        <option value="@client.ClientID">@client.ClientFirstName</option>
                    }
                </select>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>

