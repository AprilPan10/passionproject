@model IEnumerable<mypassionproject.Models.BookingDto>

@{
    ViewBag.Title = "View";
}

<h2>List</h2>

<p>
    <a class="btn btn-add btn-small" href="Create">Create New</a>
    
</p>
<table class="table table-add">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingDes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                <div class="btn btn-add btn-small">
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookingID })
                </div>
                <div class="btn btn-add btn-small">
                    @Html.ActionLink("Details", "Details", new { id = item.BookingID })
                </div>
                
            </td>
        </tr>
    }

</table>
